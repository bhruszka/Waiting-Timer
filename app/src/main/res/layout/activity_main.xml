<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bartosz.truewaitingtimer.MainActivity"
    android:background="@color/colorPrimaryDark">


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START WAITING"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/button"

        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:text="00h00m00s"
        android:textSize="70sp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:text="YOU&apos;VE BEEN WAITING FOR:"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="About Music"
        android:id="@+id/aboutMusicText"
        android:clickable="true"
        android:layout_alignTop="@+id/imageButtonMute"
        android:layout_alignEnd="@+id/resumebutton" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="RESUME"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/resumebutton"
        android:layout_weight="0.5"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_above="@+id/sendbutton"
        android:layout_alignStart="@+id/sendbutton"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="SEND URGING MESSAGE"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/sendbutton"
        android:layout_weight="0.5"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonMute"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_volume_up_white_36dp" />


</RelativeLayout>
